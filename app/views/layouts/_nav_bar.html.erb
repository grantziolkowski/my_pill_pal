<div class="icon-bar five-up">
  <%= link_to root_path, class:"item" do %>
       <%= image_tag "app/assets/images/fi-home.svg"%>
       <%= label_tag "Home"%>
  <% end %>
  <a class="item">
    <img src="./app/assets/images/fi-comments.svg" >
    <label>Forum</label>
  </a>
  <a class="item">
    <img src="./app/assets/images/fi-info.svg" >
    <label>Info</label>
  </a>
  <a class="item">
    <img src="../assets/img/images/fi-mail.svg" >
    <label>Profile</label>
  </a>
  <% if !current_user %>
    <a class="item" href="#" data-reveal-id="myModal">
      <img src="../assets/img/images/fi-like.svg" >
      <label>Sign In</label>
      <%= render 'layouts/signin_modal' %>
    </a>
    <% else %>
      <%= link_to signout_path, class:"item" do %>
       <%= image_tag "assets/img/images/fi-like.svg"%>
       <%= label_tag "Sign Out"%>
      <% end %>
    <% end %>
</div>