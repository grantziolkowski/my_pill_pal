<div id="postFormModal" class="reveal-modal small" data-reveal aria-labelledby="modalNewPosts" aria-hidden="true" role="dialog">
  <form action="/posts" method="post" id="newPostForm">
      <h4>My PillPal Forum</h4>
      <label>Title</label>
      <input name="title" type="text" >

      <label>Content</label>
      <textarea type="text" name="content" rows="10"></textarea>

      <label>Tag Medications</label>
      <input type="text" name="medications_string" placeholder="Ex. Metformin, Norvasc">

      <input type="submit" class="radius blue-gradient button" id="create_post">

  </form>
</div>
